<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/memoir_item_thumbnail"
        android:layout_width="160dp"
        android:layout_height="130dp" />

    <TextView
        android:id="@+id/memoir_item_title"
        android:layout_toRightOf="@+id/memoir_item_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/memoir_item_description"
        android:layout_toRightOf="@+id/memoir_item_thumbnail"
        android:layout_below="@id/memoir_item_title"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/memoir_item_location"
        android:layout_below="@+id/memoir_item_description"
        android:layout_toRightOf="@id/memoir_item_thumbnail"
        android:layout_width="100dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/memoir_item_date"
        android:layout_below="@+id/memoir_item_description"
        android:layout_toRightOf="@id/memoir_item_location"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <RatingBar
        android:id="@+id/memoir_item_rating"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@+id/memoir_item_thumbnail"/>

</RelativeLayout>
